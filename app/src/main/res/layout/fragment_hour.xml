<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hourLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_1" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchHardMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Habilitar modo hard"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp" />


    <ImageButton
        android:id="@+id/openSelectDate"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:src="@drawable/ic_alarm_white_24dp" />


    <TextView
        android:id="@+id/selectedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorTextPrimary"
        android:textSize="54sp"
        tools:text="08h00" />

    <Button
        android:clickable="false"
        android:id="@+id/sendSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/gradient_timerpicker"
        android:enabled="false"
        android:text="ADICIONAR ALARME"
        android:textColor="@color/colorTextPrimary" />


</RelativeLayout>