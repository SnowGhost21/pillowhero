<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageBackGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_1" />


    <TextView
        android:id="@+id/titleDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="27 de dezembro" />

    <TextView
        android:id="@+id/titleHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleDay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="64sp"
        android:textStyle="bold"
        tools:text="10:00" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/titleHour"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/img_1" />

    <TextView
        android:id="@+id/titlePlayList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient_timerpicker"
        android:maxLines="2"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        tools:text="Bombadas da duda" />

    <ImageButton
        android:id="@+id/playPause"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/titlePlayList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@null"
        tools:src="@drawable/btn_play_large" />

</RelativeLayout>